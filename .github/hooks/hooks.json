{
	"version": 1,
	"hooks": {
		"sessionStart": [
			{
				"type": "command",
				"bash": "if [ -f ~/.vscode-worktree-setup ]; then nohup npm ci > /tmp/npm-ci-$(date +%Y-%m-%d_%H-%M-%S).log 2>&1 & fi"
			}
		],
		"userPromptSubmitted": [
			{
				"type": "command",
				"bash": ""
			}
		],
		"preToolUse": [
			{
				"type": "command",
				"bash": ""
			}
		],
		"postToolUse": [
			{
				"type": "command",
				"bash": ""
			}
		]
	}
}